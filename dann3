#include <iostream>
using namespace std;
int main() {
cout<<"Calcular el volumen de las figuras geometricas."<<endl;
cout<<"Ingrese los valores de:"<<endl;
cout<<"Base:"<<endl;
float b;
cin>>b;
cout<<"Altura:"<<endl;
float h;
cin>>h;
cout<<"Radio:"<<endl;
float r;
cin>>r;
cout<<"El volumen de las figuras geometricas son:"<<endl;
cout<<"Cilindro:"<<endl;
cout<<"Formula: v=pi.r^2.h"<<endl;
cout<<"Con las variables usadas tenemos:"<<3.1415*r*r*h<<endl;
cout<<"Esfera:"<<endl;
cout<<"Formula: v=4/3.pi.r^3"<<endl;
cout<<"Con las formulas usadas tenemos:"<<4/3*3.1415*r*r*r<<endl;
cout<<"Cono:"<<endl;
cout<<"Formula: v= 1/3pi*.r^2.h"<<endl;
cout<<"Con las formulas usadas tenemos:"<<1/3*3.1415*r*r*h<<endl;
cout<<"Prisma:"<<endl;
cout<<"Formula: v=b.h"<<endl;
cout<<"Con las formulas utilizadas tenemos:"<<b*h<<endl;
cout<<"Piramide:"<<endl;
cout<<"formula: v=1/3.b.h"<<endl;
cout<<"Con las variables usadas tenemos:"<<1/3*b*h<<endl;
}
